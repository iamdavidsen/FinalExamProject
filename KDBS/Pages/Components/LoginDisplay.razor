@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <NavLink href="/job" class="btn btn-ghost btn-sm rounded-btn">Job opslag</NavLink>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="btn btn-ghost btn-sm rounded-btn">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-ghost btn-sm rounded-btn" href="Identity/Account/Register">Register</a>
        <a class="btn btn-ghost btn-sm rounded-btn" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>